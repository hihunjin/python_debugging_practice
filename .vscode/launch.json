    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "2,3",
            },
            "program": "${file}",
            "args": ["--city", "Auckland"],
            "console": "integratedTerminal",
            "request": "launch",
        },
        {
            "name": "Python: debugging.py",
            "type": "python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "2,3",
            },
            "program": "debugging.py",
            "args": ["--city", "Auckland"],
            "console": "integratedTerminal",
            "request": "launch",
        },
    ]
}